<% if @user.errors.any?%>
<h3>You couldn't edit your profile because of the following:</h3>
<ul>
    <%@user.errors.full_messages.each do |err|%>
        <li><%=err%></li>
    <%end%>
</ul>
<%end%>

<%= form_for @user do |f| %>
    Enter Your Name:     <%= f.text_field :name, placeholder: "name" %>
    Enter Your email:    <%= f.text_field :email, placeholder: "example@example.com"%>
    Enter Your Password: <%= f.text_field :password, placeholder: "Password"%>
    <%= f.submit "Update" %>
<% end %>